{
  "compilerOptions": {
    "target": "ES2020",                   // ✅ не ES5
    "lib": ["DOM", "ES2015", "ES2020"],   // ✅ обязательно ES2015+
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  }
}
